<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto" >
    <au.radsoft.preferences.EditIntegerPreference
        android:key="pref_integer"
        android:defaultValue="10"
        android:inputType="number"
        android:summary="@string/pref_integer_summary"
        android:dialogTitle="@string/pref_integer"
        android:title="@string/pref_integer"
        app:minValue="1"
        app:maxValue="50" />
        
    <au.radsoft.preferences.EditFloatPreference
        android:key="pref_float"
        android:defaultValue="3.5"
        android:inputType="numberDecimal"
        android:summary="@string/pref_float_summary"
        android:dialogTitle="@string/pref_float"
        android:title="@string/pref_float" />
    
    <EditTextPreference
        android:key="pref_uri"
        android:inputType="textUri"
        android:summary="@string/pref_uri_summary"
        android:dialogTitle="@string/pref_uri"
        android:title="@string/pref_uri" />
        
</PreferenceScreen>
